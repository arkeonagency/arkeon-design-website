---
import BaseLayout from '../layouts/BaseLayout.astro';
import Seo from '../components/Seo.jsx';
import CaseStudyCard from '../components/CaseStudyCard.jsx';

const projects = [
  {
    title: "Aman Dental",
    category: "Healthcare",
    image: "/images/aman.jpg",
    href: "/work/aman-dental"
  },
  {
    title: "NOURA Skincare",
    category: "E-Commerce",
    image: "/images/noura.jpg",
    href: "/work/noura-skincare"
  },
  {
    title: "DivineX Agency",
    category: "Creative",
    image: "/images/divinex.jpg",
    href: "/work/divinex-agency"
  }
];
---

<BaseLayout>
  <Seo 
    title="Work" 
    description="Case studies: Aman Dental, NOURA Skincare, Sample Portfolio â€” narrative-driven websites by Arkeon." 
  />

  <section class="pt-32 pb-20 relative">
    {/* Ambient Light */}
    <div class="absolute top-1/4 left-1/2 -translate-x-1/2 w-[600px] h-[600px] bg-arkeon-blue/10 blur-[150px] rounded-full pointer-events-none"></div>

    <div class="container mx-auto px-6 text-center relative z-10">
      <h1 class="text-5xl md:text-7xl font-serif mb-6" data-aos="fade-up">
        Selected <span class="text-gradient-gold">Work</span>
      </h1>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100">
        Our work combines strategy, craft, and technical delivery. Each project is presented as a story.
      </p>
    </div>
  </section>

  <section class="pb-32 relative z-10">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-10">
        {projects.map((project, index) => (
          <div data-aos="fade-up" data-aos-delay={index * 100} class={index === 2 ? "md:col-span-2 md:w-2/3 md:mx-auto" : ""}>
            <CaseStudyCard {...project} />
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <section class="py-20 border-t border-white/5 text-center relative overflow-hidden">
    <div class="absolute inset-0 bg-arkeon-gold/5 blur-3xl pointer-events-none"></div>
    <div class="relative z-10">
      <h3 class="text-3xl font-serif mb-8 text-white">Have a project in mind?</h3>
      <a href="/contact" class="inline-block px-10 py-4 bg-white text-arkeon-charcoal font-bold rounded-full hover:bg-arkeon-gold hover:scale-105 transition-all shadow-[0_0_30px_rgba(255,255,255,0.1)]">
        Let's Discuss
      </a>
    </div>
  </section>
</BaseLayout>
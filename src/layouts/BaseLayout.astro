---
import '../styles/global.css';
import Navbar from '../components/Navbar.jsx';
import Footer from '../components/Footer.jsx';
import 'aos/dist/aos.css';

// 1. NEW: Import Local Fonts (No more Google CDN delay)
import '@fontsource/inter/400.css';
import '@fontsource/inter/600.css';
import '@fontsource/playfair-display/400.css';
import '@fontsource/playfair-display/600.css';
import '@fontsource/playfair-display/700.css';

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Arkeon Studio</title>
    
    {/* 
        REMOVED: The Google Fonts <link> tags.
        ADDED: Font Display Swap to prevent invisible text
    */}
    <style is:global>
      /* Ensure text remains visible during font load */
      @font-face {
        font-family: 'Inter';
        font-display: swap;
      }
      @font-face {
        font-family: 'Playfair Display';
        font-display: swap;
      }
    </style>
  </head>
  <body class="bg-arkeon-charcoal text-white overflow-x-hidden selection:bg-arkeon-gold selection:text-arkeon-charcoal flex flex-col min-h-screen">
    
    <Navbar client:load path={currentPath} />

    <main class="flex-grow pt-20">
      <slot />
    </main>

    <Footer client:visible />

    <script>
      import AOS from 'aos';
      // Initialize AOS with a slight delay to prioritize LCP
      setTimeout(() => {
        AOS.init({
          duration: 800,
          once: true,
          easing: 'ease-out-cubic',
          offset: 50,
          disable: 'mobile' // Optional: Disable on mobile for 100% performance score
        });
      }, 100);
    </script>
  </body>
</html>
---
import '../styles/global.css';
import Navbar from '../components/Navbar.jsx';
import Footer from '../components/Footer.jsx';
import 'aos/dist/aos.css';

// Get current path to pass to Navbar
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Arkeon Studio</title>
  </head>
  <body class="bg-arkeon-charcoal text-white overflow-x-hidden selection:bg-arkeon-gold selection:text-arkeon-charcoal flex flex-col min-h-screen">
    
    {/* 
        FIX: 
        1. Changed client:only -> client:load (Renders HTML immediately) 
        2. Passed 'currentPath' so it knows if it's the home page instantly
    */}
    <Navbar client:load path={currentPath} />

    <main class="flex-grow pt-20">
      <slot />
    </main>

    <Footer client:visible />

    <script>
      import AOS from 'aos';
      setTimeout(() => {
        AOS.init({
          duration: 800,
          once: true,
          easing: 'ease-out-cubic',
          offset: 50,
        });
      }, 100);
    </script>
  </body>
</html>